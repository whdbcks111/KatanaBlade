@using System.Web.Optimization;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<BaseModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if IE 9]>         <html class="no-js lt-ie10"> <![endif]-->
<!--[if gt IE 9]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel='shortcut icon' type='image/x-icon' href='/favicon.ico' />
    @Html.Partial("Layout/Metadata")
    @Styles.Render("~/bundles/site-less")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
	  <!--[if lte IE 9]><!-->
    @Scripts.Render("~/bundles/oldie")
    <!--<![endif]-->
</head>

<body class="template-@Model.Content.GetTemplateAlias().ToLower()" data-jsload="@Model.Content.GetTemplateAlias()">
	
	<header>

	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </button>
		<div class="navbar-collapse collapse" role="navigation">
			
				@{Html.RenderPartial("Layout/MainNavigation");}

		</div>
	</header>


	

	@RenderBody()

    <div class="copyright">
		&copy; Copyright @DateTime.Now.Year . All rights reserved.
	</div>

    @Scripts.Render("~/bundles/site-js")
</body>
</html>