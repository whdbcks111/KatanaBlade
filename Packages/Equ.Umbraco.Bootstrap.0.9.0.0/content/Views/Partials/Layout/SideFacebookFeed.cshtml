@inherits Umbraco.Web.Mvc.UmbracoViewPage<BaseModel>
@using $rootnamespace$.Application.Social
@{
    var latestList = FacebookDetails.GetLatestList(3);
    var count = 0;
}

    

<div id="carousel-faq" class="carousel slide facebook" data-ride="carousel">
    <ol class="carousel-indicators">
        @foreach (var post in latestList)
        {
            <li data-target="#carousel-faq" data-slide-to="@count" @if (count == 0) { <text>class="active"</text> }></li>
            count++;
        }
    </ol>

    <div class="carousel-inner" role="listbox">
        @{count = 0;}
        @foreach (var post in latestList)
        {
            <div class="item @if( count==0){<text>active</text>}">
                <div class="title">@post.CreateDate.ToRelativeDateString() via Facebook</div>
                <p>@Umbraco.Truncate(post.Message, 130, true)</p>
                <a href="@post.Url">View full post</a>
            </div>
            count++;
        }
    </div>
</div>
<a href="https://www.facebook.com/???" class="arrow-link full">View more posts</a>
